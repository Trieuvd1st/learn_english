<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/bg_white_corner_hard_stroke_gray"
    android:orientation="horizontal"
    android:layout_margin="@dimen/spacing_micro">

    <TextView
        android:id="@+id/tvId"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/bg_circle_stroke_black"
        android:text="1"
        android:textColor="@color/black"
        android:layout_marginLeft="@dimen/spacing_tiny"
        android:gravity="center"
        android:layout_gravity="center_vertical"/>

    <TextView
        android:id="@+id/tvTopic"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingLeft="@dimen/spacing_tiny"
        android:text="Cấu trúc 1 câu trong tiếng anh"
        android:layout_marginEnd="@dimen/spacing_tiny"
        android:textSize="@dimen/font_normal"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_gravity="center_vertical"/>

    <ImageView
        android:id="@+id/ivPointRequire"
        android:layout_width="@dimen/icon_size_small"
        android:layout_height="@dimen/icon_size_small"
        android:src="@drawable/ic_add_point"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/spacing_tiny"/>

</LinearLayout>